<div class="w-full h-full grid items-center justify-items-center">
    <div class="block w-[60rem] h-[30rem]">

        <div class="flex justify-end items-center w-full mb-5 ">

            <button type="button"
                class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                onclick="applyPaths()">

                Apply
            </button>
            <button type="button"
                class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
                onclick="disablePaths()">

                Disable
            </button>
        </div>

        <div class="relative overflow-x-auto shadow-xl sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-center">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Route
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Method
                        </th>
                        <th scope="col" class="px-6 py-3 text-center">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody class="overflow-y-scroll">
                    {{#each paths}}
                    <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                        <td class="px-6 py-4 text-center">
                            {{this.ID}}
                        </td>
                        <th scope="row"
                            class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white text-center">
                            {{this.route}}
                        </th>
                        <td class="px-6 py-4 text-center">
                            {{this.type}}
                        </td>
                        <td class="px-6 py-4 text-center">
                            {{this.method}}
                        </td>
                        <td class="px-6 py-4 flex justify-center">
                            <a href="/dashboard/paths/{{this.ID}}"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                Edit
                            </a>
                            <div class="mx-1"></div>
                            <button onclick="deletePath({{this.ID}})"
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                                Delete
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="flex justify-between items-center w-full p-2">
                <div id="statusContainer">
                    <div class="text-green-600 font-bold"> â—‰ Status: Online</div>
                </div>
                <a href="/dashboard/paths/new"
                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                    onclick="applyPaths()">

                    New Path
                </a>

            </div>
        </div>


    </div>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/services/pathService.js"></script>